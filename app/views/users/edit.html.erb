<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <h1 class="text-center">〜ユーザー登録編集〜</h1>
      <%= form_with model:@customer, local: true do |f| %>
        <div class="mt-3">
          <h4>アカウント名</h4>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="text-center mt-3">
          <p><%= attachment_image_tag @customer, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%></p>
          <h4 for="inputImage">アカウント画像</h4>
          <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
        </div>
        <div class="mt-3">
          <h4>好きな動画</h4>
          <%= f.text_field :original, class:"form-control" %>
        </div>
        <div class="mt-3">
        <h4>紹介文</h4>
          <%= f.text_area :introduction, rows:"5", class:"form-control" %>
          <div class="mt-3">
            <%= f.submit '編集保存', class:"btn btn-primary btn-block" %>
          </div>
        </div>
      <% end %>
      <div class="my-3">
       <%= link_to "退会", erase_customers_path(@customer.id), class:"btn btn-danger btn-block" %>
      </div>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>
