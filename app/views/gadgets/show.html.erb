<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <%= flash[:error] %>
      <h1 class="text-center mt-3">ガジェット詳細</h1>

        <h4 class="mt-3">ガジェット名</h4>
        <div class="border border-dark">
          <%= @gadget.name %>
        </div>

        <h4 class="mt-3">ガジェット画像</h4>
        <%= attachment_image_tag @gadget, :image, :fill, 200, 200, fallback: "no_image.jpg" %></br>

        <h4 class="mt-3">ガジェット紹介</h4>
        <div class="border border-dark">
          <%= @gadget.text %>
        </div>

      <div class="text-center mt-2 mb-3">
        <%= link_to 'ガジェット一覧へ', gadgets_path, class:"btn-warning btn-block form-control" %>
      </div>
    </div>
  </div>
</div>
